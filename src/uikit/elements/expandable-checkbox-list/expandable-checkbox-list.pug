mixin expandable-checkbox-list(opts)
  .expandable-checkbox-list.js-dropdown
    .expandable-checkbox-list__field.dropdown__field.js-dropdown__button
      .expandable-checkbox-list__title.type-h3= (opts.title)
      .expandable-checkbox-list__arrow.dropdown__arrow
          +arrow-svg(opts.arrowSvg)
    .expandable-checkbox-list__menu.js-dropdown__menu
      +checkbox-list(opts)


